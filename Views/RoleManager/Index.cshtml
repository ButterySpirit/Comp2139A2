@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Role Management";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <!-- Actions like Edit and Delete could go here -->
                    <!-- Example: -->
                    <!-- <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> -->
                    <!-- <a asp-action="Delete" asp-route-id="@role.Id">Delete</a> -->
                </td>
            </tr>
        }
    </tbody>
</table>