@model Assign1.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<h1>Delete Flight</h1>

<h3>Are you sure you want to delete this flight?</h3>
<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AirlineName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AirlineName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeparturePort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeparturePort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArrivalPort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArrivalPort)
        </dd>
        <!-- Add additional fields as necessary -->
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FlightId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
