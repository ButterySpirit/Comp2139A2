@model Assign1.Models.Flight

@{
    ViewData["Title"] = "Edit Flight";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header">
            <h2 class="card-title">Edit Flight</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="AirlineName" class="form-label"></label>
                    <input asp-for="AirlineName" class="form-control" />
                    <span asp-validation-for="AirlineName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DeparturePort" class="form-label"></label>
                    <input asp-for="DeparturePort" class="form-control" />
                    <span asp-validation-for="DeparturePort" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ArrivalPort" class="form-label"></label>
                    <input asp-for="ArrivalPort" class="form-control" />
                    <span asp-validation-for="ArrivalPort" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TicketCost" class="form-label"></label>
                    <input asp-for="TicketCost" class="form-control" />
                    <span asp-validation-for="TicketCost" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AvailSeats" class="form-label"></label>
                    <input asp-for="AvailSeats" class="form-control" />
                    <span asp-validation-for="AvailSeats" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FlightDuration" class="form-label"></label>
                    <input asp-for="FlightDuration" class="form-control" />
                    <span asp-validation-for="FlightDuration" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    @Html.HiddenFor(model => model.FlightId)
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

