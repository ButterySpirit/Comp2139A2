@model Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<form asp-action="Edit" class="border border-2 rounded rounded-2 p-4 m-2">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    @Html.HiddenFor(model => model.BookingId)
    @Html.HiddenFor(model => model.TotalCost)
    @Html.HiddenFor(model => model.ServiceType)
    @Html.HiddenFor(model => model.ServiceID)



    <div class="form-group text-center p-3 m-1">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="control-label">
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <div class="form-group text-center p-3 m-1">
        <label asp-for="PaymentStatus" class="control-label"></label>
        <select asp-for="PaymentStatus" class="control-label">
            <option value="">Select a Status</option>
            @{
                var statuses = new List<string> { "Pending", "Complete", "Cancelled" };
                foreach (var status in statuses)
                {
                    if (Model.PaymentStatus == status)
                    {
                        <option value="@status" selected>@status</option>
                    }
                    else
                    {
                        <option value="@status">@status</option>
                    }
                }
            }
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>