@model List<Booking>

@{
    ViewData["Title"] = "View Bookings";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container p-2 m-2">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Booking ID</th>
                <th scope="col">Total Cost</th>
                <th scope="col">Booking Date</th>
                <th scope="col">Payment Status</th>
                <th scope="col">Booking Type</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        @foreach (var booking in Model)
        {
            <tbody>
                <tr>
                    <th scope="row">@booking.BookingId</th>
                    <td class="text-success">$@booking.TotalCost CAD</td>
                    <td>@booking.BookingDate</td>
                    <td>@booking.PaymentStatus</td>
                    <td>@booking.ServiceType</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@booking.BookingId">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@booking.BookingId">Delete</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>