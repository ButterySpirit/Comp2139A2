@model User
@{
    ViewData["Title"] = "Account";
}

<div class="text-center">
    <h1 class="display-4">Account</h1>
</div>

<div class="container-fluid text-center m-2">
    <button class="btn btn-primary me-2" id="createAccount">
        Create Account
    </button>

    <button class="btn btn-primary me-2" id="signIn">
        Sign In
    </button>
</div>

<div class="container-fluid text-center border border-2 rounded-2 p-3 visually-hidden" id="createForm">
    <div class="text-center">
        <h3 class="display-4 m-1">Create Account</h3>
    </div>
    <form asp-controller="User" asp-action="Create" method="post" class="row mb-3">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mb-3 text-center">
            <label asp-for="Username" class="col-4 col-form-label"></label>
            <input asp-for="Username" class="form-control">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3 text-center">
            <label asp-for="Email" class="col-4 col-form-label"></label>
            <input asp-for="Email" class="form-control" type="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3 text-center">
            <label asp-for="Password" class="col-4 col-form-label text-center"></label>
            <input asp-for="Password" class="form-control" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3 text-center">
            <label asp-for="ContactNumber" class="col-4 col-form-label">Phone Number</label>
            <input asp-for="ContactNumber" class="form-control" type="tel">
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Create Account</button>
        </div>
    </form>
</div>



<div class="container-fluid text-center border border-2 rounded-2 p-3 visually-hidden" id="loginForm">
    <div class="text-center pt-3 mt-3">
        <h3 class="display-4 m-1">Sign In</h3>
    </div>
    <form asp-controller="User" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row mb-3">
            <label asp-for="Username" class="col-sm-2 col-form-label">Username</label>
            <div class="col-sm-10">
                <input asp-for="Username" type="text" class="form-control" id="inputUsername">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" id="inputPassword">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Sign in</button>
    </form>
</div>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script type="text/javascript">$(document).ready(function () {

                $("#createAccount").click(function () {
                    $("#createForm").removeClass("visually-hidden");
                    $("#loginForm").addClass("visually-hidden");
                });

                $("#signIn").click(function () {
                    $("#loginForm").removeClass("visually-hidden");
                    $("#createForm").addClass("visually-hidden");
                });
            });</script>
    }
}