@model Assign1.Models.Rental

@{
    ViewData["Title"] = "Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <img src="@Url.Content($"~/img/{Model.MakeModel.Replace(" ", "")}.webp")" class="card-img-top" alt="Image of @Model.VehicleName">
                <div class="card-body">
                    <h3 class="card-title">@Model.VehicleName</h3>
                    <h6 class="text-muted">@Model.MakeModel</h6>
                    <p class="card-text mt-4">
                        <strong>Type:</strong> @Model.VehicleType<br>
                        <strong>Location:</strong> @Model.State, @Model.Country<br>
                        <strong>Year:</strong> @Model.Year<br>
                        <strong>Mileage:</strong> @Model.Mileage miles<br>
                        <strong>Status:</strong> <span>@Model.Status</span>
                    </p>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="price h4">
                            $@Model.RentalCost / day
                        </span>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Booking" asp-action="CreateRental"
                               asp-route-id="@Model.RentalId" asp-route-RentalCost="@Model.RentalCost"
                               asp-route-status="@Model.Status" class="btn btn-success btn-lg">
                                <i class="bi bi-calendar-check-fill me-2"></i> Book Now!
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-success btn-lg" disabled data-bs-toggle="tooltip" data-bs-title="Sign in to Book!">
                                <i class="bi bi-calendar-check-fill me-2"></i> Book Now!
                            </button>
                        }
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Rental" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left-circle-fill me-1"></i> Back to Rentals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
