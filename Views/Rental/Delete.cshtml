@model Assign1.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
}

<div class="container my-5">
    <div class="card mx-auto shadow-lg" style="max-width: 40rem;">
        <div class="card-body">
            <h1 class="text-center card-title">Delete Rental</h1>
            <h3 class="text-center text-danger card-subtitle mb-2">Are you sure you want to delete this Rental?</h3>
            <hr />

            <div class="px-4 py-3">
                <h4 class="text-center mb-3">Rental Data</h4>
                <dl class="row">
                    <dt class="col-sm-4">Rental ID</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.RentalId)</dd>

                    <dt class="col-sm-4">Vehicle Name</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.VehicleName)</dd>

                    <dt class="col-sm-4">License Plate</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.LicensePlate)</dd>

                    <dt class="col-sm-4">Milage</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Mileage) miles</dd>

                    <dt class="col-sm-4">State</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-4">Pickup Location</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.PickupLocation)</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Status)</dd>
                </dl>
            </div>

            <div class="text-center mt-4">
                <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                    @Html.HiddenFor(model => model.RentalId)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-1"></i>Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle-fill me-1"></i>Cancel</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}