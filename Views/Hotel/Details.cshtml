@{
    ViewData["Title"] = "Hotels";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <img src="@Model.image" class="card-img-top" alt="@Model.HotelName">
                <div class="card-body">
                    <h5 class="card-title">@Model.HotelName</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">
                        <strong>Location:</strong>
                        <address>@Model.Address, @Model.City, @Model.State, @Model.Country</address>
                    </p>
                    <p class="card-text">
                        <strong>Rating:</strong>
                        @Model.StarRating <i class="bi bi-star-fill text-warning"></i>
                    </p>
                    <p class="card-text">
                        <strong>Price:</strong>
                        <span class="text-success">$@Model.CostPerNight / Night</span>
                    </p>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Booking" asp-action="Create" asp-route-id="@Model.HotelId" asp-route-costPerNight="@Model.CostPerNight" class="btn btn-primary">
                            <i class="bi bi-calendar-check-fill me-1"> Book Now!</i>
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-primary" disabled data-bs-toggle="tooltip" data-bs-title="Sign in to Book!">
                            <i class="bi bi-calendar-check-fill me-1"> Book Now!</i>
                        </button>
                    }
                    <a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left-circle-fill me-1"></i> Back to Hotels
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


