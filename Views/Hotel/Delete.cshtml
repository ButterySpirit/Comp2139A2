@model Assign1.Models.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
}

<div class="container my-5">
    <div class="card mx-auto shadow-lg" style="max-width: 40rem;">
        <div class="card-body">
            <h1 class="text-center card-title">Delete Hotel</h1>
            <h3 class="text-center text-danger card-subtitle mb-2">Are you sure you want to delete this hotel?</h3>
            <hr />

            <div class="px-4 py-3">
                <h4 class="text-center mb-3">Hotel Data</h4>
                <dl class="row">
                    <dt class="col-sm-4">Hotel ID</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.HotelId)</dd>

                    <dt class="col-sm-4">Hotel Name</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.HotelName)</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-4">City</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4">State</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-4">Postal Code</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.PostalCode)</dd>

                    <dt class="col-sm-4">Room Type</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.RoomType)</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8 text-end">@Html.DisplayFor(model => model.Status)</dd>
                </dl>
            </div>

            <div class="text-center mt-4">
                <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                    @Html.HiddenFor(model => model.HotelId)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill me-1"></i>Delete</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle-fill me-1"></i>Cancel</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}