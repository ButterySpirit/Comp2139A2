@model Assign1.Models.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
}

<h1>Delete Hotel</h1>

<h3>Are you sure you want to delete this hotel?</h3>
<div>
    <h4>@Model.HotelName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            City
        </dt>
        <dd class="col-sm-10">
            @Model.City
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.State
        </dd>
        <!-- Add other details you want to confirm here -->
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="HotelId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
