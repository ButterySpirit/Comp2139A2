@model List<Hotel>

<div class="container-fluid p-3 m-3 text-center">
    <div class="row">
        @foreach (var hotel in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@hotel.image" class="card-img-top" alt="@hotel.HotelName">
                    <div class="card-body">
                        <h5 class="card-title">@hotel.HotelName</h5>
                        <p class="card-text">
                            @hotel.Description
                        </p>
                        <address>
                            @hotel.Address, @hotel.City, @hotel.State, @hotel.Country
                        </address>
                        <p class="text-center">
                            @hotel.StarRating Stars
                        </p>
                        <span class="price text-success">
                            $@hotel.CostPerNight / Night
                        </span>
                        <br />
                        <a asp-controller="Booking" asp-action="Create" asp-route-id="@hotel.HotelId" asp-route-costPerNight="@hotel.CostPerNight" class="btn btn-primary">Book Now!</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>